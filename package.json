{
  "name": "autobot",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prestart": "npm run build",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.js --exec \"node -r 'babel-register'\"",
    "clean": "rm -rf dist",
    "build": "npm run clean && mkdir -p dist && babel src -s -D -d dist --presets es2015,stage-2",
    "lint": "esw -w --fix src test",
    "flow": "flow check",
    "flow:coverage": "flow coverage"
  },
  "author": "",
  "license": "ISC",
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ],
    "plugins": [
      "transform-flow-strip-types",
      "ramda"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "node": true
    },
    "extends": [
      "engagepoint/server"
    ],
    "rules": {
      "flowtype/require-return-type": [
        2,
        "always",
        {
          "excludeArrowFunctions": true
        }
      ],
      "import/no-unresolved": "off",
      "import/extensions": "off",
      "import/no-extraneous-dependencies": "off"
    }
  },
  "dependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.2",
    "babel-plugin-ramda": "^1.2.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "body-parser": "^1.17.1",
    "eslint": "^3.19.0",
    "eslint-config-engagepoint": "^1.0.0-rc.17",
    "eslint-watch": "^3.1.0",
    "express": "^4.15.2",
    "flow-bin": "^0.43.1",
    "node-fetch": "^1.6.3",
    "nodemon": "^1.11.0",
    "query-string": "^4.3.2",
    "ramda": "^0.23.0",
    "request": "^2.81.0",
    "winston": "^2.3.1",
    "winston-papertrail": "^1.0.4"
  }
}
