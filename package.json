{
  "name": "autobot",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "eslint --fix crawler src",
    "lint:watch": "esw -w --fix crawler src",
    "flow": "flow check",
    "code:check": "npm run lint && npm run flow",
    "build": "cross-env NODE_ENV=production webpack",
    "prestart": "npm run build",
    "start": "cross-env NODE_ENV=production node server/loader.js",
    "start:dev": "cross-env NODE_ENV=development node server-hot/loader.js"
  },
  "author": "Zakharchenko Aleksandr",
  "license": "ISC",
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ],
    "plugins": [
      "transform-flow-strip-types",
      "ramda"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "node": true
    },
    "extends": [
      "engagepoint"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "flowtype/require-return-type": [
        2,
        "always",
        {
          "excludeArrowFunctions": true
        }
      ],
      "import/no-unresolved": "off",
      "import/extensions": "off",
      "import/no-extraneous-dependencies": "off"
    }
  },
  "dependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.2",
    "babel-loader": "^6.4.1",
    "babel-plugin-ramda": "^1.2.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-react-require": "^1.0.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "body-parser": "^1.17.1",
    "compression": "^1.6.2",
    "cross-env": "^4.0.0",
    "eslint": "^3.19.0",
    "eslint-config-engagepoint": "^1.0.0-rc.17",
    "eslint-watch": "^3.1.0",
    "express": "^4.15.2",
    "flow-bin": "^0.43.1",
    "html-webpack-plugin": "^2.28.0",
    "http-status": "^1.0.1",
    "isomorphic-fetch": "^2.2.1",
    "localforage": "^1.5.0",
    "nodemon": "^1.11.0",
    "query-string": "^4.3.2",
    "ramda": "^0.23.0",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-hot-loader": "next",
    "react-redux": "^5.0.4",
    "recompose": "^0.23.1",
    "redux": "^3.6.0",
    "redux-logger": "^3.0.1",
    "redux-ntities": "^0.0.11",
    "redux-saga": "^0.14.6",
    "request": "^2.81.0",
    "semantic-ui-react": "^0.67.2",
    "styled-components": "^1.4.4",
    "webpack": "^2.3.3",
    "webpack-dev-middleware": "^1.10.1",
    "webpack-hot-middleware": "^2.18.0",
    "winston": "^2.3.1",
    "winston-papertrail": "^1.0.4"
  }
}
